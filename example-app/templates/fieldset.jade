fieldset
  legend ok

  div(class="row")

    //- Select model.
    div.select-model(class="form-group col-sm-6 col-xs-12")
      label Select something to measure:
      select(name="model" class="form-control")
        option(disabled selected) ...
        each table in schema.toArray()
          - var selected = model && model.id === table.id;
          option(name=table.id selected=selected) #{table.id}

    if (model)
      div.select-fields(class="form-group col-sm-6 col-xs-12")
        label Fields:
        select(class="form-control")
          - console.log(model)
          each col, key in model.get('columns')
            option(name=col.name) #{col.name}



